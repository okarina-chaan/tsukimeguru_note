<div class="mt-3 space-y-2">
  <% if weekly_insight[:error] %>
    <p class="text-sm text-error">
      <%= weekly_insight[:error] %>
    </p>
  <% elsif weekly_insight[:question] %>
    <div class="bg-base-200/50 rounded-lg p-4">
      <p class="text-sm font-medium text-base-content/80 mb-2">
        先週を振り返ってみましょう
      </p>
      <p class="text-sm text-base-content whitespace-pre-line">
        <%= weekly_insight[:question] %>
      </p>
    </div>
  <% else %>
    <p class="text-sm text-base-content/60">
      振り返りを生成中です...
    </p>
  <% end %>
</div>
