<div class="container mx-auto px-4 py-8 max-w-lg">
  <div class="text-center">
    <h1 class="text-3xl font-display font-bold mb-6">メールアドレス登録</h1>

    <%= form_with model: @user, url: email_path, method: :patch, local: true do |f| %>
      <div class="form-control">
        <div>
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.email_field :email, class: "input input-bordered", required: true %>
        </div>
        <label class="label">
          <span class="label-text-alt">アカウント削除時の連絡用です</span>
        </label>
      </div>

      <div class="mt-6">
        <%= f.submit "登録する", class: "btn btn-primary" %>
        <%= link_to "キャンセル", mypage_path, class: "btn btn-ghost" %>
      </div>
    <% end %>
  </div>
</div>
