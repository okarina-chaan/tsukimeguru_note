<body class="font-sans bg-base-100 text-base-content">
  <section class="relative w-full min-h-screen overflow-hidden flex items-center justify-center">
    <img src="<%= asset_path('moon-soft-night.jpg') %>"
        alt="夜空と月"
        class="absolute inset-0 w-full h-full object-cover object-center">

    <div class="absolute inset-0 bg-gradient-to-r from-[#1d1b38]/70 to-transparent"></div>

    <div class="absolute right-[10%] bottom-[20%] max-w-md text-right">
      <h1 class="text-5xl font-display text-primary tracking-widest drop-shadow-lg mb-4">
      月めぐるノート 
      </h1>
      <p class="text-base-content/80 text-lg mb-6">
      月の満ち欠けに合わせて心と体のリズムを綴る
      </p>
      <div class="flex flex-col gap-3 items-end">
        <%= link_to new_registration_path, class: "btn btn-primary btn-lg" do %>
          新規登録
        <% end %>
        <%= link_to new_session_path, class: "btn btn-secondary btn-lg" do %>
          ログイン
        <% end %>
      </div>
    </div>

    <div class="container_06">
      <a href="#howto" class="scroll-down_06">
        <div class="circle-arrow"></div>
        Scroll Down
      </a>
    </div>
  </section>

  <%= render 'home/howto' %>

</body>
