<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "月めぐるノート" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="turbo-prefetch" content="false">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# OGP メタタグ %>
    <meta property="og:site_name" content="月めぐるノート">
    <meta property="og:title" content="<%= content_for?(:og_title) ? yield(:og_title) : '月めぐるノート' %>">
    <meta property="og:description" content="<%= content_for?(:og_description) ? yield(:og_description) : '月のリズムに寄り添う、心のセルフケア日記' %>">
    <meta property="og:type" content="<%= content_for?(:og_type) ? yield(:og_type) : 'website' %>">
    <meta property="og:url" content="<%= request.original_url %>">
    <% if content_for?(:og_image) %>
      <meta property="og:image" content="<%= yield(:og_image) %>">
    <% end %>

    <%# Twitter Card %>
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= content_for?(:og_title) ? yield(:og_title) : '月めぐるノート' %>">
    <meta name="twitter:description" content="<%= content_for?(:og_description) ? yield(:og_description) : '月のリズムに寄り添う、心のセルフケア日記' %>">
    <% if content_for?(:og_image) %>
      <meta name="twitter:image" content="<%= yield(:og_image) %>">
    <% end %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application.tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>


    <%= favicon_link_tag('/favico.ico') %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>

  </head>

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-E8YYQZZKY0"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-E8YYQZZKY0');
  </script>

  <body class="bg-base-100 text-base-content pt-16">
    <%= render 'shared/loading' %>
    <%= render 'shared/header' %>

    <div class="fixed top-20 left-4 right-4 z-[10000] pointer-events-none">
      <div class="flex flex-col gap-2 items-start">
        <% flash.each do |type, message| %>
          <div class="alert <%= type == "notice" ? "alert-success" : "alert-error" %> shadow-lg max-w-md pointer-events-auto" data-controller="flash">
            <span><%= message %></span>
            <button data-action="click->flash#remove" class="btn btn-sm btn-circle">✕</button>
          </div>
        <% end %>
      </div>
    </div>

    <%= yield %>

    <%# <%= render 'shared/footer' %>

  </body>
</html>
