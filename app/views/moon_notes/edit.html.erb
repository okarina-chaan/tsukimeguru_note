<section class="min-h-screen bg-base-100 text-base-content py-14 px-4">
  <div class="max-w-3xl mx-auto space-y-8">

    <header class="text-center space-y-2">
      <h1 class="text-4xl font-display tracking-widest">Moon Note 編集</h1>
      <p class="text-base text-base-content/70"><%= @moon_theme[:title] %></p>
    </header>

    <section class="card bg-base-200/70 border border-base-300/40">
      <div class="card-body text-center space-y-2">
        <p class="text-sm uppercase tracking-[0.4em] text-base-content/60">Theme</p>
        <h2 class="text-2xl font-serif text-primary"><%= @moon_theme[:title] %></h2>
        <p class="text-base text-base-content/80 leading-relaxed"><%= @moon_theme[:description] %></p>
      </div>
    </section>

    <%= render "moon_note_form", moon_note: @moon_note, submit_label: "更新する", show_cancel: true %>

  </div>
</section>
