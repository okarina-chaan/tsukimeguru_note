<section class="min-h-screen py-10 px-4 text-base-content" style="background-color: #1c1b2f;">
  <header class="text-center mb-10">
    <h1 class="text-3xl font-bold mb-2" style="color: #f6b87e;">Moon Note一覧</h1>
    <p class="text-sm opacity-70" style="color: #f4ecd8;">月のリズム、自分の軌跡</p>
  </header>
  <div class="space-y-8">
    <% @moon_notes.each do |moon_note| %>
      <article class="card shadow-lg rounded-2xl p-6" style="background-color: #2a274e;">
        <div class="moon-note-header">
          <div class="moon-info">
            <span class="moon-icon"><%= moon_phase_icon(moon_note.moon_phase) %></span>
            <div class="moon-details">
              <h2 class="moon-phase-name"><%= moon_phase_name(moon_note.moon_phase) %></h2>
              <time class="note-date" datetime="<%= moon_note.date %>">
                <%= l(moon_note.date, format: :long) %>
              </time>
            </div>
          </div>
          <div class="moon-age-display">
            <span class="moon-age-label">月齢</span>
            <span class="moon-age-value"><%= moon_note.moon_age.round(1) %></span>
          </div>

        </div>
        
        <div class="note-content">
          <%= simple_format(moon_note.content) %>
        </div>

        <div class="text-right mt-3">
          <%= link_to edit_moon_note_path(moon_note),
                      class: "btn btn-sm btn-outline btn-accent",
                      style: "border: 1px solid #b19dd5; color: #b19dd5; background-color: transparent; text-decoration: none;" do %>
              編集する
          <% end %>
        </div>
      </article>
    <% end %>
    
    <% if @moon_notes.empty? %>
      <div class="empty-state">
        <p>まだノートがありません</p>
      </div>
    <% end %>
  </div>
</section>
