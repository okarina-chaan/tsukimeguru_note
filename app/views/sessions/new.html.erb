<div class="min-h-screen flex items-center justify-center bg-base-200 pt-20">
  <div class="card w-96 bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl mb-4">ログイン</h2>

      <%= form_with url: session_path, local: true do |f| %>
        <div class="form-control">
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.email_field :email, class: "input input-bordered", required: true %>
        </div>

        <div class="form-control mt-4">
          <%= f.label :password, "パスワード", class: "label" %>
          <%= f.password_field :password, class: "input input-bordered", required: true %>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="divider">または</div>

      <%= link_to "新規登録はこちら", new_registration_path, class: "btn btn-ghost btn-sm" %>
    </div>
  </div>
</div>
